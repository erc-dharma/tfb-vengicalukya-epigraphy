      <app loc="6">
        <lem>-<unclear cert="low">ke</unclear><lb n="7" break="no"/><unclear cert="low">sa</unclear><space type="descender"/>rod<unclear>bh</unclear>ā<unclear>s</unclear>ita-</lem>
